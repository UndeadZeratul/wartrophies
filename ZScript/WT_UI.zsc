	private ui void DrawLiteHudPlayerStats(BaseStatusBar sbar, int x, int y, int visFlags, double alpha)
	{
		sbar.BeginHUD();

		int DI_TL = BaseStatusBar.DI_SCREEN_LEFT_TOP | BaseStatusBar.DI_ITEM_LEFT_TOP;
		int DI_TL_TEXT_LEFT = BaseStatusBar.DI_SCREEN_LEFT_TOP | BaseStatusBar.DI_TEXT_ALIGN_LEFT;
		int DI_TL_CENTER_TEXT_CENTER = BaseStatusBar.DI_SCREEN_LEFT_TOP | BaseStatusBar.DI_TEXT_ALIGN_CENTER;
		int DI_TL_CENTER_TEXT_RIGHT = BaseStatusBar.DI_SCREEN_LEFT_TOP | BaseStatusBar.DI_TEXT_ALIGN_RIGHT;

		if (NeedsUpdating)
		{
			TotalKills = GetTotalKillsForAllWeapons();
		}
		int NextOffsetY = y;

		// Total kills.
		if (visFlags & VF_TotalKills)
		{
			sbar.DrawString(mMainFont, "Total:", (x, NextOffsetY), DI_TL_TEXT_LEFT, Font.FindFontColor(GetColorForElement(Color_Labels)), alpha);
			sbar.DrawString(mMainFont, sbar.FormatNumber(TotalKills, 1, 10), (x + 45, NextOffsetY), DI_TL_TEXT_LEFT, Font.FindFontColor(GetColorForElement(Color_TotalKills)), alpha);
			NextOffsetY += 10;
		}

		// Genocide rank.
		[GenocideRank, GenocideRankString] = GetGenocideRank(TotalKills);
		if (visFlags & VF_GenocideRank)
		{
			sbar.DrawString(mMainFont, GenocideRankString, (x, NextOffsetY), DI_TL_TEXT_LEFT, Font.FindFontColor(GetColorForElement(Color_GenocideRank)), alpha);
			NextOffsetY += 14;
		}

		// Player rank & prestige.
		[PlayerRank, PlayerRankString] = GetPlayerRank();
		if (visFlags & VF_PlayerRank)
		{
			if (Prestige > 0)
			{
				sbar.DrawImage("PRSTIGE"..Prestige, (x, NextOffsetY - 5), DI_TL, alpha);
			}
			sbar.DrawString(mMainFont, PlayerRankString, (Prestige > 0 ? x + 12 : x, NextOffsetY), DI_TL_TEXT_LEFT, Font.FindFontColor(GetColorForElement(Color_PlayerRank)), alpha);
			NextOffsetY += 10;
		}

		// Player experience.
		if (visFlags & VF_PlayerExperience)
		{
			sbar.DrawString(mMainFont, "XP:", (x, NextOffsetY), DI_TL_TEXT_LEFT, Font.FindFontColor(GetColorForElement(Color_Labels)), alpha);
			sbar.DrawString(mMainFont, sbar.FormatNumber(Experience, 1, 7), (x + 22, NextOffsetY), DI_TL_TEXT_LEFT, Font.FindFontColor(GetColorForElement(Color_PlayerRank)), alpha);
			NextOffsetY += 10;

			// Player experience for next level.
			string NextPlayerRankExp = PlayerRank < XPReq.Size() ? sbar.FormatNumber(XPReq[PlayerRank], 1, 7) : "-";
			sbar.DrawString(mMainFont, "NX:", (x, NextOffsetY), DI_TL_TEXT_LEFT, Font.FindFontColor(GetColorForElement(Color_Labels)), alpha);
			sbar.DrawString(mMainFont, NextPlayerRankExp, (x + 22, NextOffsetY), DI_TL_TEXT_LEFT, Font.FindFontColor(GetColorForElement(Color_PlayerRank)), alpha);
			NextOffsetY += 14;
		}

		// Genocide medal.
		if (visFlags & VF_GenocideMedal)
		{
			sbar.DrawImage("GRANK"..GenocideRank, (x + 44, NextOffsetY), DI_TL, alpha);
		}

		// Player medal.
		if (visFlags & VF_GenocideMedal)
		{
			sbar.DrawImage("RANK"..(PlayerRank + 1), (x + 2, NextOffsetY), DI_TL, alpha);
		}
	}

