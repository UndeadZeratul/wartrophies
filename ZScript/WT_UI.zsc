	override void RenderOverlay(RenderEvent e)
	{
		mMainFont = HUDFont.Create(FontName);
		int LiteHUD = LiteHudType.GetInt();

		// ---------- LITE HUD ----------

		if (LiteHUD > 0 && !DrawUi && !AutomapActive && GameState == GS_LEVEL)
		{
			double Alpha = LiteHudAlpha.GetFloat();

			int OriginalWidth = StatusBar.HorizontalResolution;
			int OriginalHeight = StatusBar.VerticalResolution;
			double Scale = LiteHudScale.GetFloat();
			int VisiblityFlags = GetVisibilityFlags();

			// [Ace] Dividing because smaller numbers means bigger HUD.
			if (Scale > 0 && Scale != 1.0)
			{
				StatusBar.SetSize(StatusBar.RelTop, int(OriginalWidth / Scale), int(OriginalHeight / Scale));
			}

			// [Ace] Check: Not "Weapons Stats".
			if (LiteHud != 2)
			{
				DrawLiteHudPlayerStats(StatusBar, 2 + LiteHudOffsetX.GetInt(), 2 + LiteHudOffsetY.GetInt(), VisiblityFlags, Alpha);
			}

			// [Ace] Check: Weapon Stats or All.
			// Don't update available weapons if the weapon stats aren't visible. It'd be a waste of VM time.
			if (LiteHUD >= 2)
			{
				GetAvailableWeapons(AvailableWeapons);
				AutoSelectCurrentWeapon();
				class<Weapon> WeaponListSel = GetSelectedWeaponInList();

				if (WeaponListSel && WeaponListSel == ReadyWeapon)
				{
					int PosX = 2;
					int PosY = 2;

					// [Ace] Anything except "Weapon Stats"
					if (LiteHud != 2)
					{
						switch(LiteHudOrientation.GetInt())
						{
							case 0: PosY += 100; break;
							case 1:
								Font fnt = FontName;
								PosX += (PlayerRankString != "" || GenocideRankString != "") ? 10 + max(fnt.StringWidth(PlayerRankString), fnt.StringWidth(GenocideRankString)) : 100;
								break;
						}
					}

					DrawLiteHudWeaponStats(StatusBar, WeaponListSel, PosX + LiteHudOffsetX.GetInt(), PosY + LiteHudOffsetY.GetInt(), VisiblityFlags, Alpha);
				}
			}

			StatusBar.SetSize(StatusBar.RelTop, OriginalWidth, OriginalHeight);
		}

		if (DisableSaving)
		{
			StatusBar.DrawString(mMainFont, "KILL SAVING DISABLED", (-2, 2), BaseStatusBar.DI_SCREEN_RIGHT_TOP | BaseStatusBar.DI_TEXT_ALIGN_RIGHT, Font.CR_RED);
		}

		// ---------- SCORECARD ----------
		else if (DrawUi)
		{
			switch (SelectedPage)
			{
				case 0: DrawScorecardMain(StatusBar); break;
				case 1: DrawScorecardMonsters(StatusBar); break;
			}
		}
		else
		{
			AutoSelected = false;
		}

		// [Ace] It's the end of the method. Everything has been updated. Mark it as such.
		if (NeedsUpdating)
		{
			SendNetworkEvent("wT_MarkUpdated");
		}
	}

